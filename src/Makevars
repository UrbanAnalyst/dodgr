PKG_CPPFLAGS=-I.

PKG_LIBS += $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
PKG_LIBS += $(shell ${R_HOME}/bin/Rscript -e "RcppParallel::RcppParallelLibs()")

OBJ_HEAPS = heaps/bheap.o heaps/fheap.o heaps/heap23.o \
    heaps/triheap_ext.o heaps/triheap.o
OBJ_SRC = centrality.o concaveman.o deduplicate.o dgraph.o pathfinders.o dodgr-to-sf.o \
    flows.o fund-cycles.o graph-contract.o graph.o graph-sample.o match-points.o \
    RcppExports.o run_sp.o run_sp_categorical.o sc-as-network.o sf-as-network.o turn_penalty.o
OBJECTS = $(OBJ_HEAPS) $(OBJ_SRC)

.PHONY: all clean

all: $(SHLIB) $(clean)

clean: $(SHLIB)
	rm -rf $(OBJECTS)
